@model UniversityModels.Aluno
@{
    ViewData["Title"] = "Cadastro de Aluno";
}

<form method="post" asp-controller="Aluno" asp-action="Create">
    <div>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome"></span>
    </div>
    <div>
        <label asp-for="Usuario">Usuário:</label>
        <input asp-for="Usuario" />
        <span asp-validation-for="Usuario"></span>
    </div>
    <div>
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha" type="password" />
        <span asp-validation-for="Senha"></span>
    </div>
    <button type="submit">Cadastrar</button>
</form>