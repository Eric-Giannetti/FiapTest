@using UniversityDtos
@model RetornoDto<List<UniversityDtos.AlunoTurma.AlunoTurmaDto>>
@if (Model.ErrorMessage != null)
{
    <h3>@Model.ErrorMessage</h3>
}
<button type="button" class="btn"><a asp-controller="AlunoTurma" asp-action="Create"> Cadastrar </a></button>
<table>
    <tr>
        <th>Aluno</th>
        <th>Turma</th>
        <th></th>
    </tr>
    @foreach (var aluno in Model.Object)
    {
        <tr>
            <td>@aluno.aluno.Nome</td>
            <td>@aluno.turma.NomeTurma</td>
            <td><button type="button" class="btn"> <a asp-controller="AlunoTurma" asp-action="Excluir" asp-route-alunoId="@aluno.aluno.Id" asp-route-turmaId="@aluno.turma.Id"> Excluir </a></button></td>
        </tr>
    }
</table>
