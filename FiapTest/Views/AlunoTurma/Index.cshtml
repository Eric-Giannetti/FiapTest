@model List<UniversityDtos.AlunoTurma.AlunoTurmaDto>


<table>
    <tr>
        <th>Usuário</th>
        <th>Senha</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var aluno in Model)
    {
        <tr>
            <td>@aluno.aluno.Nome</td>
            <td>@aluno.turma.NomeTurma</td>
            <td><button type="button" class="btn"> <a asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id"> Editar </a></button></td>
            <td><button type="button" class="btn"> <a asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id"> @(aluno.IsDeleted ? "Reativar" : "Excluir") </a></button></td>
        </tr>
    }
</table>
